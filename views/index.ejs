<html>

<head>
    <title>
        <%= title%>
    </title>
</head>

<body>
    <h1>
        <%= title %>
    </h1>
    <form action="/search" method="get">
        <select name="queryType" id="queryType">
            <option value="searchEmail">Email</option>
            <option value="searchName">Name</option>
        </select>
        <input type="text" name="searchString" id="searchString" required>
        <button type="submit">Search</button>
    </form>
    <ul>
        <% if (locals.users) {%>
            <% users.forEach(user=> { %>
                <li>
                    ID: <%= user.id %>, Name: <%= user.firstName %>
                            <%= user.lastName %>, Email: <%= user.email %>, Age: <%= user.age %>, <% if(user.bio.length
                                            !=0){ %> Bio: <%= user.bio %>
                                                <% } else{ %>
                                                    <%= user.firstName %> has no bio! <% } %>
                                                            <a href="/<%= user.id %>/update">Update</a>
                                                            <form action="/<%= user.id %>/delete" method="post"
                                                                style="display: inline;">
                                                                <button type="submit"
                                                                    onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                                            </form>
                </li>
                <% }); %>
                    <% } %>
    </ul>
    <a href="/create">Create a user</a>
</body>

</html>