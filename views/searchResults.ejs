<html>

<head>
    <title>
        <%= title %>
    </title>
</head>

<body>
    <h1>
        <%= title %>
    </h1>
    <ul>
        <% if(locals.results.length> 0) {%>
            <% results.forEach(result=> { %>
                <li> ID: <%= result.id %>, Name: <%= result.firstName %>
                            <%= result.lastName %>, Email: <%= result.email %>, Age: <%= result.age %>, <%
                                            if(result.bio.length !=0){ %> Bio: <%= result.bio %>
                                                <% } else{ %>
                                                    <%= result.firstName %> has no bio! <% } %>
                                                            <a href="/<%= user.id %>/update">Update</a>
                                                            <form action="/<%= user.id %>/delete" method="post"
                                                                style="display: inline;">
                                                                <button type="submit"
                                                                    onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                                            </form>
                </li>
                <% }) %>
                    <% } %>
    </ul>
    <a href="/">Return Home</a>
</body>

</html>